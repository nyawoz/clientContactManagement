@model ClientContactManagementSystem.web.Models.Entities.Clients
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Client</h1>
    </div>
</div>


<div class="container py-5">
    <form id="addnewclientform" method="post">
        <div class="mb-3">
            <label for="txtclientname" class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="ClientName" required />
        </div>
        <div class="mb-3">
            <label for="txtclientsurname" class="form-label">Surname</label>
            <input type="text" class="form-control" asp-for="ClientSurname" required />
        </div>

        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control"  aria-describedby="emailHelp" asp-for="ClientEmail" required/>
            <div id="txtclientemail" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
