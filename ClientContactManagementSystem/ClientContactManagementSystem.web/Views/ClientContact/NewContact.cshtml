@{
}
@model ClientContactManagementSystem.web.Models.Entities.Contact

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Contact</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label for="txtcontactname" class="form-label">First Name</label>
            <input type="text" class="form-control" asp-for="ContactName" required />
        </div>
        <div class="mb-3">
            <label for="txtcontactsurname" class="form-label">Surname</label>
            <input type="text" class="form-control" asp-for="ContactSurname" required>
        </div>

        <div class="mb-3">
            <label for="contactemail" class="form-label">Email address</label>
            <input type="email" class="form-control" aria-describedby="emailHelp" asp-for="ContactEmail" required/>
            <div id="txtclientemail" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>

